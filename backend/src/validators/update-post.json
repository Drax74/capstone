{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Update todo",
  "type": "object",
  "properties": {
    "public": {
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 3
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "minItems": 1
    },
    "attachmentUrl": {
      "type": "string"
    }
  },
  "anyOf": [
    {
      "not": {
        "properties": {
          "public": { "enum": ["public"] }
        },
        "required": ["public"]
      }
    },
    { "required": ["description", "tags", "attachmentUrl"] }
  ],
  "additionalProperties": false
}
